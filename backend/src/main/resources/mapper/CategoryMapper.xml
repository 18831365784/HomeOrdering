<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homeordering.mapper.CategoryMapper">

    <resultMap id="CategoryResultMap" type="com.homeordering.entity.Category">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="iconUrl" column="icon_url"/>
        <result property="sort" column="sort"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <insert id="insert" parameterType="com.homeordering.entity.Category" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category (name, icon_url, sort, status, create_time, update_time)
        VALUES (#{name}, #{iconUrl}, #{sort}, #{status}, NOW(), NOW())
    </insert>

    <select id="selectById" resultMap="CategoryResultMap">
        SELECT * FROM category WHERE id = #{id}
    </select>

    <select id="selectList" resultMap="CategoryResultMap">
        SELECT * FROM category
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY sort ASC, create_time DESC
    </select>

    <update id="update" parameterType="com.homeordering.entity.Category">
        UPDATE category
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="iconUrl != null">icon_url = #{iconUrl},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM category WHERE id = #{id}
    </delete>

</mapper>


