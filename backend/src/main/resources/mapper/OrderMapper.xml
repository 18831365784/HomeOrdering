<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homeordering.mapper.OrderMapper">

    <resultMap id="OrderResultMap" type="com.homeordering.entity.Order">
        <id property="id" column="id"/>
        <result property="orderNo" column="order_no"/>
        <result property="totalAmount" column="total_amount"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <insert id="insert" parameterType="com.homeordering.entity.Order" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `order` (order_no, total_amount, status, remark, create_time, update_time)
        VALUES (#{orderNo}, #{totalAmount}, #{status}, #{remark}, NOW(), NOW())
    </insert>

    <select id="selectById" resultMap="OrderResultMap">
        SELECT * FROM `order` WHERE id = #{id}
    </select>

    <select id="selectList" resultMap="OrderResultMap">
        SELECT * FROM `order`
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <update id="updateStatus">
        UPDATE `order` SET status = #{status}, update_time = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM `order` WHERE id = #{id}
    </delete>

</mapper>
